    <!--Start/End UD-2960 VPernicia 10/27/15: Reconstruct to put header and table header for every page-->
    <apex:page controller="PackingLabelsController_POC" action="{! airlineReportHardCopy}" renderAs="PDF">

        <head>
            <style>
            body {
                font-family: 'Arial Unicode MS'; 
                font-size:14px;
                } 
             @page  
             {            
             <!-- START UD-2961 VPernicia 10/30/15-->
             size: 13.90in 9.84in;
             <!-- END UD-2961 VPernicia 10/30/15--> 
                 
                 @top-center { content: element(header); }  
             }
             <!-- START : D-2591 3/25/2015 Alyana Navarro - For Page Number-->
             .pagenumber:before {                
                content: counter(page);                
             }
             <!-- END : D-2591 3/25/2015 Alyana Navarro -->    

            div.header {
                display: block; 
                position: running(header); 
                margin:10px 10px 0px 10px;
                height:50px;     
                margin-top: 57px;
            }
            
            
            table {-fs-table-paginate: paginate;} /*START/END UD-2289 VPernicia 8/12/15 Header for every Page */

             
          </style> 
        </head>
        <div style="border-width:1px; border-style: solid;">
            
            <div class="header">
                <table width="100%">
                    <tr>
                        <td width="20%">CRSM SUBSCRIPTION</td><!--Start/End UD-2137 VPernicia: Change from CMIS to CRSM 08/24/15-->
                        <td align="center" width = "80%">
                            SPH CIRCULATION DEPARTMENT (CO. REGN. NO.: 198402868E) DATE:&nbsp;
                            <apex:outputText value="{0,date,dd'/'MM'/'yyyy}">
