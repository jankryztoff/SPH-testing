                                 <tr>
                                     <td width="20%"></td>
                                     <apex:repeat value="{! pubCodeSet2}" var="pub"><!--Start/End UD-2137 VPernicia 08/24/15-->
                                         <td align = "center">
                                             {! pub}<br/>
                                             <apex:outputText value="{0,date,dd.MM.YYYY}">
                                                 <apex:param value="{!refDate}" />    <!-- START/END: D-3672 11/13/2015 Added by Kristine Balaoing - added for batch recovery-->
                                             </apex:outputText>
                                         </td>
                                     </apex:repeat>
                                 </tr>
                            </td>
                        </tr>
                    </thead>
                    
                    <tbody>
                        <tr>
                            <td>
                                 <apex:repeat value="{! sortedDestination}" var="destination"> <!-- START-END : UD-2962 10/30/2015 Alyana Navarro -->
                                     <tr>
                                         <td><br/></td>
                                     </tr>
                                     <tr>
                                         <td>Destination: {! destination} </td> <!-- START-END : D-2591 3/26/2015 Alyana Navarro - Added word Destination -->
                                     </tr>
                                     <tr>
                                         <td><br/></td>
                                     </tr>
                                     <apex:repeat value="{! destinationRecipientIdMap[destination]}" var="recipient">
                                         <tr>                     
                                             <td width = "20%">{! recIdRecName[recipient]}</td>
                                             <apex:repeat value="{! pubCodeSet2}" var="pub"><!--Start/End UD-2137 VPernicia 08/24/15-->
                                                 <td align = "center"  width="10%">{!recIdPubCodeQuanMapMap[recipient][pub]}</td>
                                             </apex:repeat>                             
                                         </tr>                                                                                                      
                                     </apex:repeat> <!-- START-END : D-2591 3/26/2015 Alyana Navarro - Move repeat here from line 87 -->
                                     <tr>
                                         <td><br/></td>
                                     </tr>
                                     
                                     <tr>
                                         <td style="margin:0; padding:0;" width="20%"><hr/>
                                         SUB TOTAL:
                                         <hr/></td>
                                         <apex:repeat value="{! pubCodeSet2}" var="pub"><!--Start/End UD-2137 VPernicia 08/24/15-->
                                             <td width="10%" align = "center" style="margin:0; padding:0;"><hr/>{!destinationPubCodeTotalQuanMap[destination][pub]}<hr/></td>
