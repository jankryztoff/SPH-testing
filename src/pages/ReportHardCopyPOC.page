                                     <td><br/></td>
                                 </tr>
                                 <tr>
                                     <td width="20%" style="margin:0; padding:0;"><hr/>GRAND TOTAL: <hr/></td>
                                         <apex:repeat value="{! pubCodeSet2}" var="pub"><!--Start/End UD-2137 VPernicia 08/24/15-->

                                         <td align = "center" style="margin:0; padding:0;" width="10%"> <hr/>{! pubTotalMap[pub]}<hr/> </td>
