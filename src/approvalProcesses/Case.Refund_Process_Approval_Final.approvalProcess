            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>unfiled$public/Approval_for_Refund_New</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case.RecordType</field>
