            </approver>
        </assignedApprover>
        <description>3 - CTO above $500 up to $5000</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Amount_To_Refund__c</field>
                <operation>greaterThan</operation>
                <value>500</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Amount_To_Refund__c</field>
                <operation>lessOrEqual</operation>
                <value>5000</value>
